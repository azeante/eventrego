<p id="notice"><%= notice %></p>

<h1>Organisers</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Person</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisers.each do |organiser| %>
      <tr>
        <td><%= organiser.role %></td>
        <td><%= organiser.person %></td>
        <td><%= organiser.event %></td>
        <td><%= link_to 'Show', organiser %></td>
        <td><%= link_to 'Edit', edit_organiser_path(organiser) %></td>
        <td><%= link_to 'Destroy', organiser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

